      <div class="row port-page">            
      <% @categories.each do |category| %>
        <div class="gallery_product col-lg-3 col-md-4 col-sm-4 col-xs-6 filter hdpe">
          <a href="<%= services_category_path(category)%>">
            <img src="<%= category.image_url(:small) %>" class="img-responsive center-block port-image img-fluid" style="height: 170px;">
            <div class="centered"><%= category.title.upcase %></div>
          </a>            
        </div>
      <% end %>
      </div>
    </div>
  </div>
  
