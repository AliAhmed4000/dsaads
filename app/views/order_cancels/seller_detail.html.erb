<div class="container">
  <div class="row">
    <div class="col-lg-9 col-md-12">
      <div class=""> 
        <div class="owl-carousel owl-theme owl-loaded">
          <div class="owl-stage-outer">
            <div class="owl-stage">
              <h4>
                <% if params[:level] == "extend_delivery_time" %>
                  Extend Delivery
                <% elsif params[:level] == "modify_order" %>
                  Modify your Order
                <% else %>
                  Cancel Order Request
                <% end %>
              </h4>
      			  <p>Welcome! Here you can work things out resolve issues regarding your order.</p>
      			  <hr>
              <% if params[:level] == "extend_delivery_time" %>
    				    <%= render partial: 'order_cancels/forms/cancel_extend_form'%>
              <% elsif params[:level] == "modify_order" %>
                <%= render partial: 'order_cancels/forms/cancel_modify_form'%>
              <% else %>
                <%= render partial: 'order_cancels/forms/cancel_request_form'%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-12">
      <%= render partial: 'orders/order_sidebar_detail' %>
    </div>
</div>