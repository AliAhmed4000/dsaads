<div class="tab-pane" id="disputed_orders">
<div class="panel-body">
    <div class="table-responsive">
      <table class="table responsive table-hover table-condensed mb25" data-sortable data-sortable-initialized="true">
        <thead>
          <tr>
            <th>
              <% if current_user.sellers? %>
              BUYER
              <% else %>
              SELLER
              <% end %>
            </th>
            <th>GIG</th>
            <th>ORDER DATE</th>
            <th>DUE DATE</th>
            <th>TOTAL</th>
            <th>STATUS</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_disputed.each do |dispute| %>
            <tr>
              <td class="align-middle">
                <% if current_user.sellers? %>
                  <%= link_to dispute.order_item.order.user.full_name,profile_path(dispute.order_item.order.user) %>
                <% else %>
                  <%= link_to dispute.order_item.package.service.seller.full_name,profile_path(dispute.order_item.package.service.seller) %>
                <% end %>
              </td>
              <td class="align-middle">
                <%= link_to dispute.order_item.package.service.title,order_path(dispute.order_item.id),method: 'get' %>
              </td>
              <td class="align-middle"><%= dispute.order_item.created_at.strftime("%d %B %Y") %></td>
              <td class="align-middle"><%= (dispute.order_item.created_at + dispute.order_item.package.delivery_time.days).strftime("%d %B %Y") %></td>
              <td class="align-middle"><%= dispute.order_item.quantity %></td>
              <td class="align-middle">
                <% if dispute.pending?  %>
                  <% if dispute.ask_buyer_to_cancel_order?  %>
                    <span class="badge badge-info">Ask for Cancel Order</span>
                  <% elsif dispute.extend_delivery_time?  %>
                    <span class="badge badge-info">Ask For Extend Delivery</span>
                  <% elsif dispute.modify_order? %>
                    <span class="badge badge-info">Ask For Modify Order</span>
                  <% end %>
                <% else %>
                  <% if dispute.rejected? %>
                    <span class="badge badge-info">Rejected</span>
                  <% elsif dispute.approved? %>
                    <span class="badge badge-success">Approved</span>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to "show",order_dispute_path(dispute) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>