<%= simple_form_for @order,url: order_path(@order), method: 'put' do |f| %>
  <%= f.input :status, as: :hidden,:input_html => { :value => "delivered" } %>
  <label class="Checkbox-form" style="margin-bottom: 2% ">
    <%= f.submit "Deliver Your Order", class: "btn btn-info pull-right" %>
  </label>
<% end %>