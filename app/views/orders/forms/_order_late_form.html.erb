<div id="buyer-form-modal">
  <div class="modal" tabindex="-1" role="dialog" id="buyer-modal">
    <%= simple_form_for @order,url: order_path(@order), method: 'put' do |f| %>
      <%= f.error_notification %>
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Order Cancel</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="review-header pt-3">
							<div class="alert alert-info">
							  <strong>Do You</strong> want to cancel order?
							</div>
            </div>
          </div>
          <div class="modal-footer">
          	<%= f.input :status, as: :hidden,:input_html => { :value => "cancelled" } %>
            <%= f.submit "Order Cancel", class: "btn change-color" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<style type="text/css">
  .change-color{
    background-color: purple;
    color: white;
  }
  .change-color:hover{
    background-color: purple;
  }
  .change-color:active{
    background-color: purple;
  }
</style>