<div class="py-3 border border-light container-fluid tab-pane"  id="requirement">
  <div class="py-3">
    <% if @order.inactive? %>
      <div class="alert alert-info" role="alert">WAITING FOR REQUIREMENT</div>
    <% end %>
    <h6>Buyer Requirement</h6>
    <hr>
    <div class="review-header pt-3"> 
      <p><%= @order.package.service.requirements %></p>
      <% unless @order.description.blank? %>
        <h5>Description</h5>
        <p><%= @order.description %></p>
      <% end %>
      <% unless @order.file.blank? %>
        <p><%= link_to "attachment",@order.file.url,:target => "_blank" %></p>
      <% end %>
    </div>
  </div>
</div>
