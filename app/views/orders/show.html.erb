<div class="container">
  <div class="row">
    <div class="col-lg-9 col-md-12">
      <!-- <div class="border border-light"> --> 
        <p>
          <% if current_user.sellers? %>
            buyer: <%= link_to @order.order.user.full_name,profile_path(@order.order.user) %>
            <%= online_status @order.order.user %>
          <% else %>
            seller: <%= link_to @order.package.service.seller.full_name,profile_path(@order.package.service.seller) %>
            <%= online_status @order.package.service.seller %>
          <% end %>
        </p>
        <div class="owl-carousel owl-theme owl-loaded">
          <div class="owl-stage-outer">
            <div class="owl-stage">
              <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                  <a class="nav-link active" href="#chat-tab" data-toggle="tab">
                    Order Chat
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#requirement" data-toggle="tab">
                    Buyer Requirement
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#detail" data-toggle="tab">
                    Receipt Information
                  </a>
                </li>
                <% unless @order.inactive? %>
                  <li class="nav-item">
                    <a class="nav-link" href="#order-remaining" data-toggle="tab">
                      Time Remaining
                    </a>
                  </li>
                <% end %>
              </ul> 
              <div class="tab-content">
                <%= render partial: '/orders/show/chat' %>
                <%= render partial: '/orders/show/requirement' %>
                <%= render partial: '/orders/show/detail' %>
                <% unless @order.inactive? %>
                  <%= render partial: '/orders/show/timming' %>
                <% end %>
              </div>
              <%#= render partial: '/orders/show/detail' %>
              <%# if @order.inactive? && current_user.buyers? %>
                <%#= render partial: '/orders/forms/order_active_form' %>
              <%# end %>
            </div>
          </div>
        </div>
      <!-- </div> -->   
    </div>
    <div class="col-lg-3 col-md-12">
      <%= render partial: 'orders/resolution_center' %>
      <%= render partial: 'orders/resolution_center/action' %>
    </div>
  </div>
</div>
