<script>
$(document).ready(function(){
  $("#chat").click(function() {
    $('html, body').animate({
        scrollTop: $("#order-chat").offset().top
    }, 2000);
  });

  $("#detail").click(function() {
    $('html, body').animate({
        scrollTop: $("#order-detail").offset().top
    }, 2000);
  });

  $("#chat").click(function() {
    $('html, body').animate({
        scrollTop: $("#order-chat").offset().top
    }, 2000);
  });

  $("#requirement").click(function() {
    $('html, body').animate({
        scrollTop: $("#order-requirement").offset().top
    }, 2000);
  });

  $("#remaining").click(function() {
    $('html, body').animate({
        scrollTop: $("#order-remaining").offset().top
    }, 2000);
  });

  $('#file-input').bind('change', function() {
    if(this.files[0].size/1024/1024 > 1){
      alert("File size should be less 1GB");
      $('#file-input').val('');
    }
  });
});
</script>
