<div class="container mt-4">
  <div class="py-3" style="margin-bottom: 3%">
    <% if current_user.sellers? && @order.package.service.user_id == current_user.id %>
      <%= simple_form_for @order,url: order_path(@order), method: 'put' do |f| %>
        <%= f.input :status, as: :hidden,:input_html => { :value => "delivered" } %>
        <label class="Checkbox-form" style="margin-bottom: 2% ">
          <%= f.submit "Deliver Your Order", class: "btn btn-info pull-right" %>
        </label>
      <% end %>
    <% else %>
      <% if @order.inactive? %>
        <%= render partial: '/orders/order_start' %>
      <% else %>
        <%= simple_form_for @order,url: order_path(@order), method: 'put' do |f| %>
          <%= f.input :status, as: :hidden,:input_html => { :value => "completed" } %>
          <label class="Checkbox-form" style="margin-bottom: 2% ">
            <%= f.submit "Complete Your Order", class: "btn btn-info pull-right" %>
          </label>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <%= render partial: '/orders/order_detail' %>
  <% if @order.active? %>
    <div class="row">
      <% date = @order.created_at + @order.package.delivery_time.days %>
      <div class='countdown' data-date='<%= date.strftime("%Y-%m-%d") %>' data-time='<%= date.strftime("%H:%M:%S") %>'></div>
    </div>
  <% end %>
  <%= render partial: '/orders/order_chats' %>
</div>
<style type="text/css">
  .countdown {
    font-family: 'Roboto';
    text-transform: uppercase;
    padding-left: 32%;
  }
  .countdown > div { display: inline-block; }
  .countdown > div > span {
    display: block;
    text-align: center;
  }
  .countdown-container { margin: 0 3px; }
  .countdown-container .countdown-heading {
    font-size: 11px;
    margin: 3px;
    color: #666
  }
  .countdown-container .countdown-value {
    font-size: 50px;
    background: #6273c9;
    padding: 10px;
    color: #fff;
    text-shadow: 2px 2px 2px rgba(0,0,0,0.4)
  }
</style>