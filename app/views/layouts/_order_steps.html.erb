<div class="container">
  <div class="row bs-wizard" style="border-bottom:0;">
    <% if params[:action] == "payment" || !@order_item.blank? %>
    <div class="col-xs-3 bs-wizard-step complete">
    <% else %>
    <div class="col-xs-3 bs-wizard-step active">
    <% end %>
      <div class="text-center bs-wizard-stepnum">Step 1</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <% if params[:action] == "payment" %>
        <%= link_to "",service_package_path(@service,@package),class: 'bs-wizard-dot' %>
      <% else %>
        <%= link_to "","#",class: 'bs-wizard-dot' %>
      <% end %>
      <div class="bs-wizard-info text-center">Order Details</div>
    </div>
    <% if params[:action] == "payment" %>
    <div class="col-xs-3 bs-wizard-step active">
    <% elsif !@order_item.blank? %>
    <div class="col-xs-3 bs-wizard-step complete">
    <% else %>
    <div class="col-xs-3 bs-wizard-step disabled">
    <% end %>
      <div class="text-center bs-wizard-stepnum">Step 2</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <%= link_to "","#",class: 'bs-wizard-dot' %>
      <div class="bs-wizard-info text-center">Confirm & Pay</div>
    </div>
    <div class="col-xs-3 bs-wizard-step disabled">
      <div class="text-center bs-wizard-stepnum">Step 3</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <%= link_to "","#",class: 'bs-wizard-dot' %>
      <div class="bs-wizard-info text-center">Requirements</div>
    </div>
  </div>
</div>
<style type="text/css">
  .bs-wizard > .bs-wizard-step {padding: 0; position: relative; width: 32%;}
</style>