<div class="container">
  <div class="devise-container">
  <h2>Sign In</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Password", class: "form-control" %>
    </div>
    <div>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %> Remember Me
      <% end %>
      <span class="pull-right">
        <%= link_to "Forgot Password", new_user_password_path %>
      </span>
    </div>
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-info btn-block" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  <div class="devise-container">
</div>