<div class="container">
  <h3>Account Security</h3>
  <p>Trust and safety is a big deal in our community. Please verify your email and phone number so that we can keep your account secured.</p><hr>
  <%= simple_form_for @user, url: onboarding_path(@user.id), wrapper: :horizontal_form, 
  defaults: { input_html: { class: 'mt-3' },label_html: { class: 'mt-3' }}, 
  wrapper_mappings: {
    boolean:       :horizontal_boolean,
    check_boxes:   :horizontal_collection,
    date:          :horizontal_multi_select,
    datetime:      :horizontal_multi_select,
    file:          :horizontal_file,
    radio_buttons: :horizontal_collection,
    range:         :horizontal_range,
    time:          :horizontal_multi_select} do |f|  %>
    <%= f.error_notification %>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-9"><h5>Email</h5></div>
        <div class="col-sm-3"><button class="btn btn-light" disabled="">Verified</button></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-9"><h5>Phone Number</h5></div>
        <div class="col-sm-3"><button class="btn btn-light" disabled="">Add Phone</button></div>
      </div>
    </div>
    <%= f.input :wizard, :as => :hidden, :input_html => {:value => "seller_finish_info"} %> 
    <div class="form-group row mb-0">
      <div class="col-sm-9 offset-sm-3">
        <%= f.button :submit, class: "btn-success pull-right", value: 'Finish' %>
      </div>
    </div>
  <% end %>
</div>