<div id="refund-balance-modal">
  <div class="modal" tabindex="-1" role="dialog" id="refund-modal">
    <div class="modal-dialog" role="document">
      <%= simple_form_for @payment, url: create_refund_request_path,method: :post do  |f|%>
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Request A Refund</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= f.error_notification %>
            <%= f.input :order_item_id,collection: @order_disputed.pluck(:order_item_id).uniq,required: true %>
            <%= f.input :user_reason,required: true,label: 'Reason', hint: 'Minimum 50 words required', placeholder: "Reason", input_html: {rows: "3"},as: :text  %>
            <%# if current_user.sellers? %>
              <%#= f.hidden_field :status,value: 'withdraw' %>
            <%# else %>
              <%#= f.hidden_field :status,value: 'refund' %>
            <%# end %>
          </div>
          <div class="modal-footer">
            <%= f.submit "Submit", class: "btn change-color" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<style type="text/css">
  .change-color{
    background-color: purple;
    color: white;
  }
  .change-color:hover{
    background-color: purple;
  }
  .change-color:active{
    background-color: purple;
  }
</style>