<div class="container-fluid px-5">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="SortBlufLink">
        <h2>Earnings</h2>
        <span> expected Income: <%= number_to_currency(current_user.expected_coming) %></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="card" style="width: 15rem;">
      <div class="card-body text-center">
        <h5 class="card-title">Net Income</h5>
        <h5 class="card-text"><%= number_to_currency(current_user.net_coming) %></h5>
      </div>
    </div>
    <div class="card" style="width: 15rem;">
      <div class="card-body text-center">
        <h5 class="card-title">Withdrawn</h5>
        <h5 class="card-text"><%= number_to_currency(current_user.withdrawn_money) %></h5>
      </div>
    </div>
    <div class="card" style="width: 15rem;">
      <div class="card-body text-center">
        <h5 class="card-title">Used For Purchases</h5>
        <h5 class="card-text"><%= number_to_currency(current_user.net_purchases) %></h5>
      </div>
    </div>
    <div class="card" style="width: 15rem;">
      <div class="card-body text-center">
        <h5 class="card-title">Pending Clearance</h5>
        <h5 class="card-text"><%= number_to_currency(current_user.pending_clearance) %></h5>
      </div>
    </div>
    <div class="card" style="width: 15rem;">
      <div class="card-body text-center">
        <h5 class="card-title">Available for Withdraw</h5>
        <h5 class="card-text"><%= number_to_currency(current_user.net_coming - current_user.withdrawn_money) %></h5>
      </div>
    </div>
  </div>
  <div class="row py-2">
    <div class="col">
      <strong>WithDraw:<strong>
      <strong> 
        <% if (current_user.net_coming - current_user.withdrawn_money) == 0 %>
          <%= link_to "PayPal Account",'javascript:void(0)',:class=>"btn change-color","data-toggle"=>"tooltip", "data-placement"=>"top", "title"=>"No Earning To Withdraw"%>
        <% else %>
          <%= link_to "PayPal Account",balance_path(current_user.id),:class=>"btn change-color" ,remote: true %>
        <% end %>
      </strong>
    </div>
  </div>
  <hr>
  <div class="">
      <div class="SortBlufLink">
        <h3>Transactions</h3>
      </div>
      <table class="table responsive table-hover table-condensed mb25" data-sortable data-sortable-initialized="true">
        <thead>
          <tr>
            <th>Date</th>
            <th>Subject</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% current_user.payments.withdraw.each do |item| %>
            <tr>
              <td class="align-middle"><%= item.created_at.strftime("%d %B %Y") %></td>
              <td class="align-middle"><%=  item.subject %></td>
              <td class="align-middle"><%= number_to_currency(item.amount) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</section>
<script>
  $(function(){
    $('table').DataTable();
  });
</script>
<div id="paypal-form-modal"></div>
<style type="text/css">
  .change-color{
    background-color: purple;
    color: white;
  }
  .change-color:hover{
    background-color: purple;
  }
  .change-color:active{
    background-color: purple;
  }
</style>