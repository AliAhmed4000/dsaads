<div class="container">
  <div class="row">
    <!-- Service Photo Slider -->
    <div class="col-lg-8 col-md-12">
      <div class="border border-light"> 
        <div class="owl-carousel owl-theme owl-loaded">
          <div class="owl-stage-outer">
            <div class="owl-stage">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
              <h3>Submit Requiremnts</h3>
            </nav><hr>
            <%= simple_form_for @order,url: orders_path, method: 'post',:html => {:class => 'form-horizontal'} do |f| %>
              <%= f.error_notification %>
              <div style="padding: 5%;">   
              <%= f.simple_fields_for :order_items do |i| %>
                <%= i.input :buyer_order_requirement, required: true, hint: 'Minimum 50 words required', placeholder: 'Give some impressive description for your valuable service', input_html: {rows: "3"}  %>
                <%= i.hidden_field(:package_id,value: @package.id) %>
                <%= i.hidden_field(:quantity,value: "1") %>
                <%= i.hidden_field(:price,value: "500") %>
              <% end %>
              </div>    
              <div>
                <span class="inline-block float-right">
                  <%= f.submit "Order Start", class: "btn btn-outline-success" %>
                </span> 
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-12">
      <div class="border border-light"> 
        <div class="owl-carousel owl-theme owl-loaded">
          <div class="owl-stage-outer">
            <div class="owl-stage">
              <div><h5 class="text-center">Summary</h5></div>
              <div class="row text-center">
                <div class="col">
                SubTotal</div>
                <div class="col">
                500</div>
              </div>
              <div class="row text-center">
                <div class="col">
                Service Fee</div>
                <div class="col">
                500</div>
              </div>
                <hr>
              <div class="row text-center">
                <div class="col">
                Total</div>
                <div class="col">
                500</div>
              </div>
              <div class="row text-center">
                <div class="col">
                Delivery Time</div>
                <div class="col">
                500</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#quantity").change(function(){
    var qty = $("#quantity").val();
    var price = '<%= @package.price %>';
    var total = accounting.formatMoney(qty*price);
    $("#price").html(total)
  });
</script>