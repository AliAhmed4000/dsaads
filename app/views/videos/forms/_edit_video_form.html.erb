<div id="video-modal">
  <div class="modal" tabindex="-1" role="dialog" id="video-modal-form">
    <div class="modal-dialog" role="document">
      <%= simple_form_for @service, url: video_path,method: :put, remote: true do  |f|%>
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Youtube Video Link</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div id="video_errors"></div>
            <%= f.error_notification %>
            <%= f.input :video_link,required: true %>
          </div>
          <div class="modal-footer">
            <%= f.submit "Submit", class: "btn change-color" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<style type="text/css">
  .change-color{
    background-color: purple;
    color: white;
  }
  .change-color:hover{
    background-color: purple;
  }
  .change-color:active{
    background-color: purple;
  }
</style>