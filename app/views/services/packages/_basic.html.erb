<div class="tab-pane active in" id="basic">
  <div class="row py-2">
    <div class="col font-weight-bold"><h5><strong>Basic Service</strong></h5></div>
    <div class="col"><h5><%= number_to_currency(@service.basic_package.price) %></h5></div>
  </div>
  <div class="row">
    <div class="col">
      <p>••• CONTACT ME BEFORE ORDERING •••</p>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <i class="fa fa-clock-o" aria-hidden="true"></i>
      <strong> 
        <%= pluralize(@service.basic_package.delivery_time, 'Days') %> Delivery
      </strong>
    </div>
    <div class="col">
      <i class="fa fa-repeat" aria-hidden="true"></i>
      <strong>
        <%= @service.basic_package.revision_number %> Revisions
      </strong>
    </div>
  </div>
  <div class="row py-2 text-center">
    <div class="col">
      <%= link_to "Continue #{number_to_currency(@service.basic_package.price)}",service_package_path(@service,@service.basic_package), class: "btn btn-primary" %>
    </div>
  </div>
</div>