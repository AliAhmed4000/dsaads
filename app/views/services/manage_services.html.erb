<div class="container-fluid px-5">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="SortBlufLink">
          <h2>Manage Services</h2>
          <%= link_to "POST NEW SERVICE", new_service_path,class: 'btn btn-outline-primary pull-right' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12" id="documents">
      <div class="box-tab justified">
        <ul class="nav nav-tabs">
          <li class="active nav-item">
            <a class="nav-link active" href="#active_gigs" data-toggle="tab">
              Active
              <span class="badge badge-light"><%= @active_gigs.count %></span>
            </a>
          </li>
          <li class="active nav-item">
            <a class="nav-link" href="#inactive_gigs" data-toggle="tab">
              Inactive
              <span class="badge badge-light"><%= @inactive_gigs.count %></span>
            </a>
          </li>
          <li class="active nav-item">
            <a class="nav-link" href="#draft_gigs" data-toggle="tab">
            Draft
            <span class="badge badge-light"><%= @draft_gigs.count %></span>
            </a>
          </li>
        </ul>
        <div class="tab-content">
          <%= render partial: "/services/manage_services/active" %>
          <%= render partial: "/services/manage_services/inactive" %>
          <%= render partial: "/services/manage_services/draft" %>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>
