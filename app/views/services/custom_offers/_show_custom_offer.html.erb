<div id="show-custom-form-modal">
  <div class="modal" tabindex="-1" role="dialog" id="custom-form-gig">
    <%= simple_form_for @service, url: custom_offer_create_path(@service),method: :put do  |f|%>
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Create Custom Offer</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h4>I can <%= @service.title %></h4>
          <div class="card mb-3">
            <% unless @service.primary_photo.blank? %>
              <%= image_tag @service.primary_photo.image_url, class: "card-img-top" %>
            <% end %>
            <%= f.input :conversation_id, as: :hidden,:input_html => { :value => @conversation.id } %>
            <div class="card-body">
              <%= f.simple_fields_for :custom_package do |custom| %>
                <%= custom.input :description,label: 'Description', required: true, hint: 'Minimum 50 words required', placeholder: 'Give some impressive description for your valuable service',:minlength=>"50", input_html: {rows: "3"}  %>
                <%= custom.input :delivery_time,required: true %>
                <%= custom.input :price,required: true %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Submit Offer", class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>