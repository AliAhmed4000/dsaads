<%= f.simple_fields_for :standard_package do |standard| %>
  <table class="table table-bordered">
    <tr>
      <td><%= standard.input :name, hint: 'Maximum 100 words', required: true, input_html: {maxlength: 100} %></td>
    </tr>
    <tr>
      <td><%= standard.input :description, hint: 'Maximum 100 words', required: true, input_html: {maxlength: 100} %></td>
    </tr>
    <tr>
      <td><%= standard.input :delivery_time,collection: Package::STANDARD_DELIVERY,required: true,input_html: {maxlength: 100} %></td>
    </tr>
    <tr>
      <td><%= standard.input :price,collection: Package::STANDARD_PRICE,required: true,input_html: {maxlength: 100} %></td>
    </tr>
  </table>
<% end %>