<%= f.simple_fields_for :premimum_package do |premimum| %>
  <table class="table table-bordered">
    <tr>
      <td><%= premimum.input :name, hint: 'Maximum 100 words', required: true,input_html: {maxlength: 100} %></td>
    </tr>
    <tr>
      <td><%= premimum.input :description, hint: 'Maximum 100 words', required: true, input_html: {maxlength: 100}%></td>
    </tr>
    <tr>
      <td>  
        <%= premimum.input :revision_number,label: 'Revisions',collection: Package::REVISION,required: true %>
      </td>
    </tr>
    <tr>
      <td><%= premimum.input :delivery_time,label: 'Delivery Time in Days',collection: Package::EXTEND_DELIVERY,required: true, input_html: {maxlength: 100} %></td>
    </tr>
    <tr>
      <td><%= premimum.number_field :price,required: true,class: "form-control",min: "5" %></td>
    </tr>
    <%= premimum.hidden_field :user_id,value: current_user.id %>
  </table>
<% end %>