<%= f.simple_fields_for :premimum_packages do |premimum| %>
  <table class="table table-bordered">
    <tr>
      <td><%= premimum.input :name, hint: 'Maximum 100 words', required: true,input_html: {maxlength: 100} %></td>
    </tr>
    <tr>
      <td><%= premimum.input :description, hint: 'Maximum 100 words', required: true, input_html: {maxlength: 100}%></td>
    </tr>
    <tr>
      <td><%= premimum.input :delivery_time,collection: Package::PREMIMUM_DELIVERY,required: true, input_html: {maxlength: 100} %></td>
    </tr>
    <tr>
      <td><%= premimum.input :price,collection: Package::PREMIMUM_PRICE,required: true ,input_html: {maxlength: 100}%></td>
    </tr>
  </table>
<% end %>