<%= f.simple_fields_for :basic_package do |basic| %>
  <table class="table table-bordered">
    <tr>
      <td><%= basic.input :name, hint: 'Maximum 100 words', required: true, input_html: {maxlength: 100} %></td>
    </tr>
    <tr>
      <td><%= basic.input :description, hint: 'Maximum 100 words', required: true, input_html: {maxlength: 100}%></td>
    </tr>
    <tr>
      <td>  
        <%= basic.input :revision_number,label: 'Revisions',collection: Package::REVISION,required: true %>
      </td>
    </tr>
    <tr>
      <td>  
        <%= basic.input :delivery_time,label: 'Delivery Time in Days',collection: Package::EXTEND_DELIVERY,required: true %>
      </td>
    </tr>
    <tr>
      <td><%= basic.number_field :price,required: true,class: "form-control",min: "5"  %></td>
    </tr>
    <%= basic.hidden_field :user_id,value: current_user.id %>
  </table>
<% end %>