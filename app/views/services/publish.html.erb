<div class="container font-weight-bold bg-light">
  <div class="container">  
    <%= simple_form_for @service do |f|  %>
      <%= f.input :publish, as: :hidden,:input_html => { :value => true } %>
      <h3>Almost there...
      Let's publish your Service and get
      some buyers rolling in.</h3>
      <div>
        <span class="inline-block float-right">
          <%= f.input :wizard,as: :hidden, :input_html => { :value => "published" } %>
          <%= f.submit "Publish", class: "btn btn-outline-success" %>
        </span> 
      </div>
    <% end %>
  </div>
</div>
