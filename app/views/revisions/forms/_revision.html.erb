<%= simple_form_for @revision,url: revision_description_path(@revision), method: 'get' do |f| %>
  <%= f.error_notification %>
    <div class="row mb-3">
      <div class="col-md-6 col-sm-12"> 
      	<%= f.input :delivery,collection: Package::EXTEND_DELIVERY,required: true %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6 col-sm-12">
      	<%= f.input :price,required: true,label: 'Price' %>
      </div>
    </div>
	   <div class="form-group row mb-0">
      <div class="col-sm-9 offset-sm-3">
        <%= f.submit "Submit", class: "btn btn-outline-success pull-right" %>
      </div>
    </div>
<% end %>