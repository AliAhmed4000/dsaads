<div id="revision-form-modal">
  <div class="modal" tabindex="-1" role="dialog" id="revision-modal">
    <div class="modal-dialog" role="document">
      <%= simple_form_for @revision,url: revisions_path, method: 'post' do |f| %>
  			<%= f.input :status, as: :hidden,:input_html => { :value => "pending" } %>
  			<%= f.input :order_item_id, as: :hidden,:input_html => { :value => @order.id } %>
  			<%= f.input :buyer_id, as: :hidden,:input_html => { :value => current_user.id } %>
  			<%= f.input :seller_id, as: :hidden,:input_html => { :value => @order.package.service.user_id } %>
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Revision Requirments</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= f.error_notification %>
            <%= f.input :description, required: true , placeholder: "Describe Requirments", input_html: {rows: "3"},as: :text %>
            <%= f.input :type,as: :hidden, :input_html => { :value => current_user.buyers? ? "BuyerReview" : "SellerReview"} %>
          </div>
          <div class="modal-footer">
            <%= f.submit "Submit", class: "btn change-color" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<style type="text/css">
  .change-color{
    background-color: purple;
    color: white;
  }
  .change-color:hover{
    background-color: purple;
  }
  .change-color:active{
    background-color: purple;
  }
</style>